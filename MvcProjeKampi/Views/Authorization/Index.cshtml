@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanici Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Aktif/Pasif Yap</th>
        <th>Yetkiyi Degistir</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminID</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole</td>
            <td>Aktif</td>
            <td><a href="#" class="btn btn-warning">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-primary">Yetki Degistir</a></td>
        </tr>
    }

</table>
<br />
<a href="/Authorization/AddAdmin/" class="btn btn-info">Yeni Admin Tanimla</a>